<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	    <select id="selectByEmail" resultType="com.myproject.shop.vo.UserVO">
        <![CDATA[
          SELECT
              email
          FROM
              user
          WHERE
              email = #{email}     
      ]]>
    </select>
    
    <select id="selectById" resultType="com.myproject.shop.vo.UserVO">
        <![CDATA[
          SELECT
              userid
          FROM
              user
          WHERE
              userid = #{userid}       
      ]]>
    </select>
    
    <insert id="register">
        <![CDATA[
            INSERT INTO USER
            (
                userid,
                userpw,
                email,
                birth,
                username,
                phone,
                adr1,
                adr2,
                adr3,
                regdate,
                gender
            )
            VALUES
            (
                #{userid},
                #{userpw},
                #{email},
                #{birth},
                #{username},
                #{phone},
                #{adr1},
                #{adr2},
                #{adr3},
                SYSDATE(),
                #{gender}
            )
        ]]>
    </insert>
  
</mapper>
